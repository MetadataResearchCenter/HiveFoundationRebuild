from nltk.corpus import stopwords
import re

# getting the document content
def get_content(file):
    hash = {}
    with open(file) as f:
        for line in f:
            for word in line.split():
                if word.lower() not in hash:
                    hash[word.lower()] = 1
                else:
                    hash[word.lower()] += 1
    print(file)
# filter the stopwords and punctations
#def filter_stop_word (hash):



def main():
    get_content("./sample/astronomyArticle.txt")

if __name__ == "__main__":
    main()


